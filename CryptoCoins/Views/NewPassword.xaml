<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoCoins.Views.NewPassword">
    <VerticalStackLayout Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">

        <Image Source="logo.jpg" HeightRequest="200" WidthRequest="250" />

        <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
            <Label Text="Change Password!" FontSize="28" TextColor="Gray" HorizontalTextAlignment="Center" />
            <Label Text="Add secure password" FontSize="18" TextColor="Gray" HorizontalTextAlignment="Center" />
        </VerticalStackLayout>

        <Frame HeightRequest="45" Margin="0,10,0,0" Padding="0" HasShadow="True" HorizontalOptions="FillAndExpand" BackgroundColor="#202022">
            <Entry x:Name="passwordEntry" Placeholder="password" IsPassword="True" TextColor="White" />
        </Frame>

        <Frame HeightRequest="45" Margin="0,10,0,0" Padding="0" HasShadow="True" HorizontalOptions="FillAndExpand" BackgroundColor="#202022">
            <Entry x:Name="passwordEntry1" Placeholder="confirm password" IsPassword="True" TextColor="White" />
        </Frame>

        <Button x:Name="btnSignIn" Text="Change" WidthRequest="100" CornerRadius="20" BackgroundColor="#323234"
            HorizontalOptions="Center" Clicked="btnPass_Clicked" />
    </VerticalStackLayout>
</ContentView>
